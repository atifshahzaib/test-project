<div class="container">
  <h1>Orders</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Amount Paid</th>
        <th>Customer Name</th>
        <th>Shipping Address</th>
        <th>Phone Number</th>
        <th>Payment Method</th>
        <th>Status</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= number_to_currency(order.amount_paid) %></td>
          <% shipment = order.shipment %>
          <td><%= shipment.customer_name %></td>
          <td><%= shipment.shipping_address %></td>
          <td><%= shipment.phone_number %></td>
          <td><%= shipment.payment_method %></td>
          <td><%= Shipment.human_attribute_name("status.#{shipment.status}") %></td>
          <td><%= order.created_at %></td>
          <td>
            <%= link_to "Show", order_path(order), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
