<h1 class="text-center mb-5">
  My Products
  <% if current_user.present? %>
    <%= link_to "Add Product", new_product_path, class: "btn btn-primary float-end" %>
  <% end %>
</h1>

<% if @products.present? %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <% if current_user.present? %>
          <th></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price) %></td>
          <% if current_user.present? %>
            <td>
              <%= link_to "Update", edit_product_path(product), class: "btn btn-primary me-2" %>
              <%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4 class="text-center">No products available</h4>
<% end %>
